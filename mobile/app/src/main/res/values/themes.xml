<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Theme.DarrensGreenhouses" parent="Theme.AppCompat.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/dark</item>
    <item name="colorPrimaryVariant">@color/mid</item>
    <item name="colorOnPrimary">@android:color/white</item>
    <item name="colorAccent">@color/light</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/lightest</item>
    <item name="colorSecondaryVariant">@color/light</item>
    <item name="colorOnSecondary">@android:color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">@android:color/black</item>
    <!-- Customize your theme here.-->
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
